{
  "name": "favorite-subdir",
  "displayName": "Favorite Subdir -- pin terminal to directory",
  "description": "Right click a folder to make it the default terminal directory. New terminals open in that folder.",
  "version": "0.0.1",
  "icon": "icon.png",
  "publisher": "qpwo",
  "repository": {
    "type": "git",
    "url": "https://github.com/qpwo/vscode_favorite_subdir.git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "favorite-subdir.setFavorite",
        "title": "Set as Favorite Terminal Directory"
      },
      {
        "command": "favorite-subdir.clearFavorite",
        "title": "Clear Favorite Terminal Directory"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "favorite-subdir.setFavorite",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    }
  },
  "devDependencies": {
    "@vscode/vsce": "^3.6.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@vscode/vsce-sign",
      "keytar"
    ]
  }
}
